
<div id="sidebar" class="Sidebar Sidebar__Alpha scrollbar {{ preference_value('pixney.theme.fiske::sidebar_hover', setting_value('pixney.theme.fiske::sidebar_hover')) ? 'hover' }}">

    {% if request_path()=='admin/preferences/themes/pixney.theme.fiske' %}
    <ul>
        {% for key, navigation in template.cp.navigation %}
            <li class="{{ navigation.active ? 'active' }} variant-border" data-slug="{{ navigation.slug }}">
                <i class="fa fa-arrows handle btn btn-xs"></i>
                <a {{ html_attributes(navigation.attributes) }} title="{{ trans(navigation.title) }}">
                    <span class="icon">{{ navigation.icon()|raw }}</span>
                    <span class="title">{{ trans(navigation.title) }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
    {% else %}
        <ul>
        {% for key, navigation in template.cp.navigation %}
            <li class="{{ navigation.active ? 'active' }} variant-border" data-slug="{{ navigation.slug }}">
                <a {{ html_attributes(navigation.attributes) }} title="{{ trans(navigation.title) }}">
                    <span class="icon">{{ navigation.icon()|raw }}</span>
                    <span class="title">{{ trans(navigation.title) }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>
    {% endif %}

</div>
